<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
<nav class="navbar navbar-static">
    <% include ../partials/nav %>
</nav>
<header class="masthead">
    <% include ../partials/header %>
</header>
<div class="container">
    <div class="row">
        <div class="col col-sm-3">
            <div id="sidebar">
                <% include ../partials/sidebar %>
            </div>
        </div>
        <div class="col col-sm-9">
            <div class="row">
                <div class="col-lg-6">
                    <div class="input-group">
                        <form method="get" action="/destinations" autocomplete="off" class="navbar-search pull-left">
                            <span class="input-group-btn">
                                <input type="text" class="form-control" name="name" data-provide="typeahead"
                                       placeholder="Search for a destination..."/>
                              <input type="submit" value="Search" class="btn btn-default"/>
                          </span>
                        </form>
                    </div>
                </div>
            </div>
            <button><a href="<%= pages.destinations.getAddDestination %>">Add destination</a></button>
            <ul>
                <% for(var i = 0; i < destinations.length; i++) { %>
                <li>
                    <a href="<%= pages.destinations.getDestinationIndex %>/<%= destinations[i]._id %>">
                        <%= destinations[i].name %>
                    </a>
                    <p>
                        <%= destinations[i].description %>
                    </p>
                    <ul>
                        <% for(var j = 0; j < destinations[i].hotels.length; j++) { %>
                        <li>
                            <%= destinations[i].hotels[j].name %>
                        </li>
                        <li>
                            <%= destinations[i].hotels[j].rating %>
                        </li>
                        <% } %>
                    </ul>
                </li>
                <% } %>
            </ul>
            <% include ../partials/pagination %>
        </div>
    </div>
</div>
<footer>
    <% include ../partials/footer %>
</footer>
</body>

</html>
