<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
<nav class="navbar navbar-static">
    <% include ../partials/nav %>
</nav>
<header class="masthead">
    <% include ../partials/header %>
</header>
<div class="container">
    <div class="row">
        <div class="col col-sm-3">
            <% if (user && user.role.name === 'Admin') { %>
            <div id="sidebar">
                <% include ../partials/destination/destinationListAdminSidebar %>
            </div>
            <% } else { %>
            <div id="sidebar">
                <% include ../partials/destination/destinationListSidebar %>
            </div>
            <% } %>
        </div>
        <div class="col col-sm-9">
            <% if(error_messages.length > 0) { %>
            <% include ../partials/errorMessage %>
            <% } %>

            <% if(success_messages.length > 0) { %>
            <% include ../partials/succesMessage %>
            <% } %>

            <div class="panel panel-default">
                <% for(var i = 0; i < destinations.length; i++) { %>
                <div class="panel">
                    <a href="<%= pages.destinations.getDestinationIndex %>/<%= destinations[i]._id %>">
                    <div class="panel-body">
                            <span>
                                <%= destinations[i].name %>
                            </span>
                        <p>
                            <%= destinations[i].description %>
                        </p>
                        <% for(var j = 0; j < destinations[i].hotels.length; j++) { %>
                        <div>
                            Name: <%= destinations[i].hotels[j].name %>
                            Rating: <%= destinations[i].hotels[j].rating %>
                            <p><%= destinations[i].hotels[j].description %></p>
                        </div>
                        <% } %>
                    </div>
                    </a>
                </div>
                <% } %>
                <% include ../partials/pagination %>
            </div>
        </div>
    </div>
</div>
<footer>
    <% include ../partials/footer %>
</footer>
</body>

</html>
