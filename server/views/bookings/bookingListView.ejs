<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
<nav class="navbar navbar-static">
    <% include ../partials/nav %>
</nav>
<header class="masthead">
    <% include ../partials/header %>
</header>
<div class="container">
    <div class="row">
        <div class="col col-sm-3">
            <% if (user && user.role.name === 'Admin') { %>
            <div id="sidebar">
                <% include ../partials/booking/bookingListAdminSidebar %>
            </div>
            <% } else { %>
            <div id="sidebar">
                <% include ../partials/booking/bookingListSidebar %>
            </div>
            <% } %>
        </div>
        <div class="col col-sm-9">
            <% if(error_messages.length > 0) { %>
            <% include ../partials/errorMessage %>
            <% } %>

            <% if(success_messages.length > 0) { %>
            <% include ../partials/succesMessage %>
            <% } %>
            <div class="panel panel-default">
                <% for(var i = 0; i < bookings.length; i++) { %>
                <div class="panel">
                    <a href="<%= pages.bookings.getBookingIndex %>/<%= bookings[i]._id %>">
                            <div class="panel-body">
                            <span>
                                <%= bookings[i].created_at %>
                            </span>
                                <div class="panel">
                                    <div class="panel-body">
                                    <span>
                                        Arrangement: <%= bookings[i].arrangement.name %>
                                    </span>
                                        <p>
                                            description: <%= bookings[i].arrangement.description %>
                                        </p>
                                        Arrangement for: <%= bookings[i].people %> people
                                    </div>
                                </div>
                                <div class="panel">
                                    <div class="panel-body">
                                    <span>
                                        Hotel: <%= bookings[i].hotel.name %>
                                    </span>
                                        <p>
                                            Description: <%= bookings[i].hotel.description %>
                                        </p>
                                        <p>
                                            Rating: <%= bookings[i].hotel.rating %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                    </a>
                </div>
                <% } %>
                <% include ../partials/pagination %>
            </div>
        </div>
    </div>
</div>
<footer>
    <% include ../partials/footer %>
</footer>
</body>

</html>
